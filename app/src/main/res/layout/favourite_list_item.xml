<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            app:cardCornerRadius="20dp"
            app:cardMaxElevation="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/shopFavouritePicture"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/shopFavouriteLogo"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="20dp"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toStartOf="@+id/shopFavouriteTitle"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/shopFavouritePicture"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/shopFavouriteTitle"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="Shop Title"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintStart_toEndOf="@+id/shopFavouriteLogo"
                    app:layout_constraintTop_toTopOf="@id/shopFavouriteLogo" />

                <TextView
                    android:id="@+id/shopFavouriteLocation"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:text="Shop Location"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="@id/shopFavouriteTitle"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/shopFavouriteTitle"
                    app:layout_constraintTop_toBottomOf="@id/shopFavouriteTitle" />

                <ImageView
                    android:id="@+id/shopFavouriteRatingsPicture"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="@id/shopFavouriteLocation"
                    app:layout_constraintTop_toBottomOf="@id/shopFavouriteLocation"
                    tools:srcCompat="@drawable/ic_rating" />

                <TextView
                    android:id="@+id/shopFavouriteRatingsValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="TextView"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="@id/shopFavouriteTitle"
                    app:layout_constraintStart_toEndOf="@id/shopFavouriteRatingsPicture"
                    app:layout_constraintTop_toTopOf="@id/shopFavouriteRatingsPicture" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>